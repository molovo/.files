#CLASS {fish} OPEN

#alias {reelitin} {
  #if {"$hooked" == "false"} {
    reelin long;
  };

  #if {"$hooked" == "true"} {
    reelin medium;
  };
}

#alias {caast} {
  #var hooked false;
  cast medium;
}

#alias {fish} {
  #untick {reeling};
  caast;
  #ticker {reeling} {reelitin} {25};
}

#alias {stopfishing} {#untick {reeling}}

#action {breaks the line} {caast}
#action {slips free} {caast}
#action {You pull your hook out} {caast}
#action {You reel in all the way} {caast}
#action {You play out too quickly} {caast}
#action {You tug too quickly} {caast}
#action {Your hook is not in the water} {caast}

#action {attempts to break loose} {#delay {6} {playout short}}
#action {swims toward the boat} {#delay {6} {tug light}}

#action {You hook a} {#var hooked true}

#CLASS {fish} CLOSE
