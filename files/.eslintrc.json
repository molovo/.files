{
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true
    }
  },
  "plugins": [
    "standard",
    "unicorn",
    "xo"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:xo/recommended",
    "plugin:unicorn/recommended",
    "standard"
  ],
  "rules": {
    "block-spacing": [
      1,
      "always"
    ],
    "eqeqeq": "error",
    "curly": "error",
    "camelcase": "error",
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "valid-jsdoc": [
      2,
      {
        "prefer": {
          "arg": "param",
          "argument": "param",
          "class": "constructor",
          "returns": "return",
          "virtual": "abstract"
        },
        "requireReturn": false,
        "requireParamDescription": false,
        "requireReturnDescription": false
      }
    ],
    "xo/catch-error-name": "off"
  }
}